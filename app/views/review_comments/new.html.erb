<div class="container-fluid">
  <div class="row review-comment">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
          <div class="review-item">
            <div class="row">
              <div class="col-sm-4 hidden-xs comment-product-image">
                <%= image_tag @review.product.image.image_url %><hr>
              </div>
              <div class="col-sm-8">
                <h1 class="product-title"><%= @review.product.title %></h1>
                <p class="product-time hidden-xs">放送開始：<%= @review.product.date.strftime("%Y年%m月") %></p>
                <p class="product-company hidden-xs">制作：<%= @review.product.company %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-2 text-center review-user-image">
                <%= link_to user_path(@review.user) do %>
                  <% if @review.user.image.present? %>
                    <%= image_tag @review.user.image.image_url.thumb, class:"img-circle" %>
                  <% else %>
                    <%= image_tag "default.png", class:"img-circle" %>
                  <% end %>
                <% end %>
              </div>
              <%= link_to user_path(@review.user) do %>
              <div class="col-xs-10">
                <div class="review-name-date">
                  <p class="review-username">
                    <%= @review.user.nickname %>
                    <% end %>
                  </p>
                  <p class="review-date text-right"><%= @review.created_at.strftime('%Y年%m月%d日') %></p>
                </div>
                  <p class="review-rating">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <span class="rate-number"><%= @review.rate %></span>
                  </p>
                  <p class="review-title"><%= @review.title %></p>
                  <p class="review-text"><%= @review.review %></p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-xs-12">
              <%= form_for [@review.product, @review, @review_comment] do |f| %>
                <div class="form-group">
                <%= f.label :comment, class: "sr-only" %><br />
                <%= f.text_area :comment, placeholder: "コメント", class: "form-control", rows: "5" %>
                </div>
                <div class="form-group text-center">
                  <%= f.submit "投稿", class:"btn btn-danger" %>
                </div>
              <% end %>
            </div>
          </div>
          <% @review.review_comments.reverse_each do |review_comment| %>
            <div class="row">
              <div class="col-xs-2 text-center review-comment-user-image">
                <%= link_to user_path(review_comment.user) do %>
                  <% if review_comment.user.image.present? %>
                    <%= image_tag review_comment.user.image.image_url.thumb, class:"img-circle" %>
                  <% else %>
                    <%= image_tag "default.png", class:"img-circle" %>
                  <% end %>
                <% end %>
              </div>
              <div class="col-xs-10">
                <div class="review-name-date">
                  <p class="review-username">
                    <%= link_to user_path(review_comment.user) do %>
                      <%= review_comment.nickname %>
                    <% end %>
                  </p>
                  <p class="review-date text-right"><%= review_comment.created_at.strftime('%Y年%m月%d日') %></p>
                </div>
                  <p class="review_comment-username"><%= review_comment.comment %></p><hr>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
