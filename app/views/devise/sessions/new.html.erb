<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
     <div class="text-center">
      <p class="devise-title">ログイン</p>
     </div>
       <div class="personal_data col-sm-6 col-sm-offset-3">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "sr-only" %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          </div>

           <div class="field">
            <%= f.label :pasword, class: "sr-only" %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
             <div class="field login-memory">
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン情報を記憶する %>
            </div>
           <% end %>

          <div class="actions text-center">
            <%= f.submit "ログイン", class:"btn btn-danger btn-lg" %>
          </div>

          <hr>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
