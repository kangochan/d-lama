<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="text-center">
        <h2>新規登録</h2><hr>

        <div class="personal_data col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
          <div class="row">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :email, class: "sr-only" %><br />
              <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :nickname, class: "sr-only" %><br />
              <%= f.text_field :nickname, autofocus: "off", placeholder: "ニックネーム", class: "form-control" %>
            </div>


            <div class="form-group">
              <%= f.label :password, class: "sr-only" %><br />
              <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "sr-only" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード（確認用）", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "登録", class:"btn btn-default" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
