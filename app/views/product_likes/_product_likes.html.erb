<% if user_signed_in? %>
  <% if product.like_user(current_user.id) %>
    <%= button_to product_like_path(like, product_id: product.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= product.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to tweet_likes_path(product), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= product.like_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= product.like_count %>
    </span>
<% end %>
