<div class="container-fluid">
  <div class="row product-detail">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="site_detail text-center">
          <h3>プロフィール編集</h3><hr>
        </div>

            <div class="personal_data col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
              <%= form_for current_user do |f| %>

                  <div class="form-group">
                    <%= f.label :nickname, class: "sr-only" %><br />
                    <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
                  </div>


                  <div class="form-group">
                    <%= f.label :email, class: "sr-only" %><br />
                    <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control" %>
                  </div>


                  <div class="form-group">
                    <%= f.label :gender, class: "sr-only" %><br />
                    <label><%= f.radio_button :gender, "1" %>男性</label>
                    <label><%= f.radio_button :gender, "2" %>女性</label>
                  </div>

                  <div class="form-group">
                    <%= f.label :introduction, class: "sr-only" %><br />
                    <%= f.text_area :introduction, placeholder: "自己紹介", class: "form-control", rows: "3" %>
                  </div>


                  <div class="form-group">
                    <%= f.submit "変更内容を保存する" %>
                  </div>
              <% end %>
            </div>
      </div>
    </div>
  </div>
</div>
