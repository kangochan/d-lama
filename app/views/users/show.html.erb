<div class="container-fluid">
  <div class="row user-page">
    <div class="col-md-10 col-md-offset-1">
      <div class="row user-profile">
        <div class="col-md-2 col-sm-3 col-xs-5 user-image">
          <% if @user.image.present? %>
            <%= image_tag @user.image.image_url.thumb, class:"img-rounded" %>
          <% else %>
            <%= image_tag "default.png", class:"profile-image" %>
          <% end %>
        </div>
        <div class="col-md-10 col-sm-9 col-xs-7">
          <h1 class="user-nickname"><%= @user.nickname %></h1>
          <p><%= @user.introduction %></p>
          <% if @user == current_user %>
            <%= link_to edit_user_path(current_user), class:"btn btn-default btn-xs" do %>
              <i class="fa fa-cog fa-fw" aria-hidden="true"></i>プロフィール編集
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row">
       <div role="tabpanel">
        <ul class="nav nav-tabs nav-justified nav-head" role="tablist">
          <li role="presentation" class="active"><a href="#review" data-toggle="tab">レビュー(<%= @reviews.count %>作品)</a></li>
          <li role="presentation" ><a href="#product" data-toggle="tab">作品(<%= @user.product_likes.count %>)</a></li>
        </ul>
        <div id="userTabContent" class="container-fluid tab-content">
          <div class="tab-content row">
            <div role="tabpanel" class="tab-pane active" id="review">
             <% @reviews.each.with_index do |product| %>
              <div class="col-md-3 col-sm-4 col-xs-6">
                  <%= link_to product_path(product) do %>
                    <div class="product-user-image">
                      <%= image_tag product.image.image_url %>
                    </div>
                    <div class="text text-center">
                      <p><%= product.title %></p>
                    </div>
                  <% end %>
              </div>
             <% end %>
            </div>
            <div role="tabpanel" class="tab-pane" id="product">
              <% @user.product_likes.each do |product_like| %>
               <div class="col-md-3 col-sm-4 col-xs-6">
                   <%= link_to product_path(product_like.product) do %>
                     <div class="product-user-image">
                       <%= image_tag product_like.product.image.image_url %>
                     </div>
                     <div class="text text-center">
                       <p><%= product_like.product.title %></p>
                     </div>
                   <% end %>
               </div>
              <% end %>
            </div>
          </div>
        </div>
       </div>
      </div>
    </div>
  </div>
</div>
