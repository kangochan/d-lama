<div class="container-fluid">
  <div class="row review-page">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
          <div class="col-md-6 col-sm-6 hidden-xs">
            <img src="<%= @product.image_url %>" alt="" style="width: 100%;"/><hr>
          </div>
        <div class="col-md-6 col-sm-6 hidden-xs">
          <h1 class="product-title"><%= @product.title %></h1>
          <h5 class="product-time"><%= @product.year %>年<%= @product.month %>月期</h5>
          <h5 class="product-company">制作：<%= @product.company %></h5>
        </div>
        <%= form_for [@product, @review] do |f| %>

          <div class="form-group">
            <div id="star_rank"></div>
            <%= f.label :rate, class: "sr-only" %>
            <%= f.hidden_field :rate, id: "hint" %>
          </div>

          <div class="form-group">
            <%= f.label :title, class: "sr-only" %><br />
            <%= f.text_field :title, placeholder: "レビュータイトル", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :review, class: "sr-only" %>
            <%= f.text_area :review, placeholder: "本文", class: "form-control", rows: "8" %>
          </div>

          <div class="form-group text-center">
            <%= f.submit "投稿" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $('#star_rank').raty({
    half     : true,
    starHalf : '<%= asset_path('star-half.png') %>',
    starOff  : '<%= asset_path('star-off.png') %>',
    starOn   : '<%= asset_path('star-on.png') %>',
    target    : '#hint',
    targetKeep: true,
    click: function(score, evt) {
      $("rate").val(score);
    }
  });
</script>
