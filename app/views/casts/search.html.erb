<div class="container-fluid">
  <div class="row cast-search">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <%= form_tag('/casts/search', method: :get) do %>
          <input class="form-group" name="keyword" placeholder="キャストで検索" type="text" value=""><button class="btn-search" title="検索" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button></input>
        <% end %>
        <% @casts.each do |cast| %>
          <div class="col-md-3 col-sm-4 col-xs-6">
            <%= link_to cast_path(cast) do %>
              <div class="image">
                <img src="" alt=""/>
              </div>
              <div class="cast text-center">
                <p><%= cast.cast %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
