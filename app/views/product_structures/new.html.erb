<div class="container-fluid">
  <div class="row story-edit">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="text-center">
          <h3>ストーリー編集</h3><hr>
        </div>
          <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
            <%= form_for [@product, @product_structure] do |f| %>
              <div class="form-group">
                <%= f.label :story_number, class: "sr-only" %><br />
                <%= f.number_field :story_number, placeholder: "話数", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :subtitle, class: "sr-only" %><br />
                <%= f.text_field :subtitle, placeholder: "サブタイトル", class: "form-control" %>
              </div>

              <div class="form-group text-center">
                <%= f.submit "投稿", class: "btn btn-danger" %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
